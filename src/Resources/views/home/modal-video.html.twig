<div class="modal fade modal-video" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" style="max-width: 1200px">
        <div class="modal-content">

            <div class="main-card card">
                <div class="card-header">
                    <i class="header-icon lnr-upload icon-gradient bg-plum-plate"></i>
                    Recherche Video
                    <input type="hidden" value="{{ asset('bundles/coavideolibrary/images/not-available.png','coa_videolibrary_host') }}">


                    <div class="ml-auto d-flex justify-content-center align-items-center">

                        <div class="search-wrapper">
                            <div class="input-holder">
                                <input type="text" class="search-input" placeholder="Rechercher une video...">
                                <button class="search-icon"><span></span></button>
                            </div>
                            <button class="close"></button>
                        </div>

                        {% if container.getParameter('coa_videolibrary')["constellation"]["connections"] is defined %}
                            <div class="mr-3">
                                <select id="example-single" class="btn-primary search-service">
                                    <option value="">Serveur local</option>
                                    {% for key,connection in  container.getParameter('coa_videolibrary')["constellation"]["connections"] %}
                                        <option value="{{ key }}">{{ connection.service }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="card-body position-relative" style="height:470px;overflow: auto;">

                    <div style="text-align:center" class="loader">
                        <i  class="fa fa-spinner fa-spin fa-4x text-dark"></i>
                    </div>

                    <div class="row video-container"></div>
                </div>

                <div class="d-block text-right card-footer">
                    <button type="button" class="btn btn-info" data-dismiss="modal">
                        Quitter
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>